<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/phpDocumentor/phpDocumentor/master/data/xsd/phpdoc.xsd"
>
    <paths>
        <output>docs</output>
        <cache>docs/.cache</cache>
    </paths>
    <version number="1.0.0">
        <api>
            <source dsn=".">
                <path>app</path>
                <path>config</path>
                <path>database</path>
                <path>routes</path>
            </source>
            <ignore hidden="true" symlinks="true">
                <path>vendor/**/*</path>
                <path>storage/**/*</path>
                <path>bootstrap/**/*</path>
                <path>public/**/*</path>
                <path>resources/**/*</path>
                <path>node_modules/**/*</path>
                <path>tests/**/*</path>
            </ignore>
            <extensions>
                <extension>php</extension>
            </extensions>
            <default-package-name>TodoList</default-package-name>
            <include-source>true</include-source>

            <markers>
                <marker>TODO</marker>
                <marker>FIXME</marker>
            </markers>
        </api>
    </version>
    <template name="clean"/>
    <setting name="graphs.enabled" value="true"/>
    <setting name="graphs.uml.enabled" value="true"/>
</phpdocumentor>
